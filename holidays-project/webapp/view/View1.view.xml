<mvc:View controllerName="sap.btp.holidaysproject.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <GenericTile id="businessPartners" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>tileBusinessPartnersHeader}" press="onNavigate">
                <TileContent>
                    <ImageContent src="test-resources/sap/m/demokit/sample/GenericTileAsLaunchTile/images/SAPLogoLargeTile_28px_height.png" />
                </TileContent>
            </GenericTile>

            <GenericTile id="salesOrders" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>tileSalesOrdersHeader}" press="onNavigate">
                <TileContent>
                    <ImageContent src="test-resources/sap/m/demokit/sample/GenericTileAsLaunchTile/images/SAPLogoLargeTile_28px_height.png" />
                </TileContent>
            </GenericTile>
        </content>
    </Page>
</mvc:View>

